{
  "manifest_version": 3,
  "name": "Time Compass",
  "version": "1.0",
  "description": "A multilingual time compass showing time in 12/24-hour format with compass directions in Arabic, Malay, and English",
  "action": {
    "default_title": "Time Compass",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "tabs"]
}
